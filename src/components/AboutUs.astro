---
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="about section" id="about">
  <div class="container">
    <div class="about__container">
      <div class="about__content" data-animate="fade-right">
        <span class="section-label">{t.about.label}</span>
        <h2 class="section-title">{t.about.title}</h2>
        <p class="about__desc">{t.about.description}</p>

        <div class="about__badges">
          <div class="trust-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
              <path d="m9 12 2 2 4-4"/>
            </svg>
            <span>{lang === 'es' ? 'Seguridad Avanzada' : 'Advanced Security'}</span>
          </div>
          <div class="trust-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/>
            </svg>
            <span>{lang === 'es' ? 'Ultra Rapido' : 'Ultra Fast'}</span>
          </div>
          <div class="trust-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="20" height="14" x="2" y="5" rx="2"/>
              <line x1="2" x2="22" y1="10" y2="10"/>
            </svg>
            <span>Mastercard</span>
          </div>
        </div>
      </div>

      <div class="about__visual" data-animate="fade-left">
        <img
          src="/images/debit.png"
          alt="Braxs Debit Card"
          class="about__card"
          width="400"
          height="250"
          loading="lazy"
        />
      </div>
    </div>

    <div class="about__legal" data-animate="fade-up">
      <p>{t.about.legal}</p>
    </div>
  </div>
</section>

<style>
  .about {
    background: var(--bg-primary);
    position: relative;
    overflow: hidden;
  }

  .about__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .about__content {
    padding: 0;
  }

  .about__desc {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-8);
  }

  .about__badges {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    background: var(--bg-secondary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--text-primary);
    transition: all var(--duration-normal) var(--ease-smooth);
  }

  .trust-badge:hover {
    border-color: var(--glass-border-gold);
    background: rgba(212, 175, 55, 0.1);
  }

  .trust-badge svg {
    color: var(--gold-400);
  }

  .about__visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .about__card {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.3));
    transition: transform var(--duration-normal) var(--ease-smooth);
  }

  .about__card:hover {
    transform: scale(1.02);
  }

  .about__legal {
    margin-top: var(--space-12);
    padding: var(--space-6);
    background: var(--bg-secondary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
  }

  .about__legal p {
    font-size: var(--text-sm);
    color: var(--text-muted);
    line-height: var(--leading-relaxed);
    text-align: center;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .about__container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .about__badges {
      justify-content: center;
    }

    .about__visual {
      order: -1;
    }

    .about__card {
      max-width: 300px;
    }
  }

  @media (max-width: 640px) {
    .about__badges {
      flex-direction: column;
      align-items: center;
    }

    .about__card {
      max-width: 250px;
    }

    .about__legal {
      padding: var(--space-4);
    }

    .about__legal p {
      font-size: var(--text-xs);
    }
  }
</style>
