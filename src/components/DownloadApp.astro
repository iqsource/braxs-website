---
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="download-app section" id="download-app">
  <div class="container">
    <div class="download-app__content" data-animate="fade-up">
      <span class="section-label">{t.downloadApp.label}</span>
      <h2 class="download-app__title">{t.downloadApp.title}</h2>
      <p class="download-app__subtitle">{t.downloadApp.subtitle}</p>

      <div class="download-app__buttons">
        <a
          href="https://apps.apple.com/cr/app/koi/id6752642158"
          class="download-app__store-btn download-app__store-btn--ios"
          target="_blank"
          rel="noopener"
          aria-label="Download on App Store"
        >
          <svg viewBox="0 0 24 24" width="32" height="32" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          <div class="download-app__store-text">
            <span class="download-app__store-label">{lang === 'es' ? 'Descarga en' : 'Download on the'}</span>
            <span class="download-app__store-name">App Store</span>
          </div>
        </a>

        <a
          href="https://play.google.com/store/apps/details?id=cr.didi.koi_app"
          class="download-app__store-btn download-app__store-btn--android"
          target="_blank"
          rel="noopener"
          aria-label="Get it on Google Play"
        >
          <svg viewBox="0 0 24 24" width="32" height="32" fill="currentColor">
            <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
          </svg>
          <div class="download-app__store-text">
            <span class="download-app__store-label">{lang === 'es' ? 'Disponible en' : 'Get it on'}</span>
            <span class="download-app__store-name">Google Play</span>
          </div>
        </a>
      </div>

      <p class="download-app__note">{t.downloadApp.note}</p>
    </div>
  </div>
</section>

<style>
  .section-label {
    display: block;
  }

  .download-app {
    background: var(--bg-secondary);
    position: relative;
    overflow: hidden;
  }

  .download-app::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(201, 162, 39, 0.1) 0%, transparent 70%);
    pointer-events: none;
  }

  .download-app__content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .download-app__title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-4);
    background: var(--gradient-gold);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    padding-bottom: 0.1em;
    display: inline-block;
  }

  .download-app__subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    margin-bottom: var(--space-10);
    line-height: var(--leading-relaxed);
  }

  .download-app__buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-6);
    flex-wrap: wrap;
    margin-bottom: var(--space-8);
  }

  .download-app__store-btn {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4) var(--space-8);
    background: var(--dark-800);
    border: 2px solid var(--gold-500);
    border-radius: var(--radius-xl);
    color: var(--text-primary);
    text-decoration: none;
    transition: all var(--duration-normal) var(--ease-smooth);
    min-width: 220px;
  }

  .download-app__store-btn:hover {
    background: var(--gradient-gold);
    border-color: transparent;
    transform: translateY(-4px);
    box-shadow: var(--glow-gold);
  }

  .download-app__store-btn:hover svg,
  .download-app__store-btn:hover .download-app__store-text {
    color: var(--dark-900);
  }

  .download-app__store-btn svg {
    flex-shrink: 0;
    color: var(--gold-400);
    transition: color var(--duration-normal) var(--ease-smooth);
  }

  .download-app__store-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    transition: color var(--duration-normal) var(--ease-smooth);
  }

  .download-app__store-label {
    font-size: var(--text-xs);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .download-app__store-btn:hover .download-app__store-label {
    color: var(--dark-700);
  }

  .download-app__store-name {
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    line-height: 1.2;
  }

  .download-app__note {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  @media (max-width: 640px) {
    .download-app__title {
      font-size: var(--text-3xl);
    }

    .download-app__buttons {
      flex-direction: column;
      align-items: center;
    }

    .download-app__store-btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
</style>
