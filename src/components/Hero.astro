---
import Button from './ui/Button.astro';
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="hero gradient-mesh grid-bg">
  <div class="hero__container container">
    <div class="hero__content">
      <span class="hero__badge" data-animate="fade-up">
        <span class="hero__badge-dot"></span>
        {t.hero.badge}
      </span>

      <h1 class="hero__title" data-animate="fade-up" data-delay="100">
        {t.hero.title}
        <span class="text-gradient">{t.hero.titleHighlight}</span>
        {t.hero.titleEnd}
      </h1>

      <p class="hero__subtitle" data-animate="fade-up" data-delay="200">
        {t.hero.subtitle}
      </p>

      <div class="hero__cta" data-animate="fade-up" data-delay="300">
        <Button href="#how-it-works" variant="primary" size="lg">
          {t.hero.cta.primary}
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </Button>
        <Button href="#download-app" variant="secondary" size="lg">
          {t.hero.cta.secondary}
        </Button>
      </div>

      <div class="hero__stores" data-animate="fade-up" data-delay="400">
        <a href="https://apps.apple.com/cr/app/koi/id6752642158" class="store-badge" target="_blank" rel="noopener">
          <img src="/images/app-store.svg" alt="Download on App Store" width="140" height="42" />
        </a>
        <a href="https://play.google.com/store/apps/details?id=cr.didi.koi_app" class="store-badge" target="_blank" rel="noopener">
          <img src="/images/google-play.svg" alt="Get it on Google Play" width="140" height="42" />
        </a>
      </div>
    </div>

    <div class="hero__visual" data-animate="fade-left" data-delay="200">
      <div class="hero__phone animate-float">
        <img
          src="/images/phone-mockup.png"
          alt="Koi+ App Interface"
          width="280"
          height="560"
          loading="eager"
        />
      </div>

      <div class="hero__card animate-float-delayed">
        <img
          src="/images/braxs-card.png"
          alt="Tarjeta Braxs"
          width="320"
          height="200"
          loading="eager"
        />
      </div>

      <!-- Floating Badges -->
      <div class="floating-badge floating-badge--1 animate-float-badge">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>+$500</span>
      </div>

      <div class="floating-badge floating-badge--2 animate-float-badge" style="animation-delay: 0.5s;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <span>{lang === 'es' ? 'Transferencia exitosa' : 'Transfer successful'}</span>
      </div>

      <div class="floating-badge floating-badge--3 animate-float-badge" style="animation-delay: 1s;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
        <span>{lang === 'es' ? 'Seguro' : 'Secure'}</span>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="hero__scroll animate-bounce">
    <span>{lang === 'es' ? 'Scroll' : 'Scroll'}</span>
    <div class="scroll-arrow">
      <div class="scroll-dot"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: var(--space-32) 0 var(--space-20);
    overflow: hidden;
    background: var(--bg-primary);
  }

  .hero__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }

  /* Content */
  .hero__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.3);
    border-radius: var(--radius-full);
    color: var(--success);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    margin-bottom: var(--space-6);
  }

  .hero__badge-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: pulse-ring 2s ease infinite;
  }

  .hero__title {
    font-size: var(--text-5xl);
    font-weight: var(--font-extrabold);
    line-height: 1.1;
    margin-bottom: var(--space-6);
  }

  .hero__title span {
    display: block;
    padding-bottom: 0.05em;
  }

  .hero__subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-8);
    max-width: 500px;
  }

  .hero__cta {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    flex-wrap: wrap;
  }

  .hero__stores {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .store-badge {
    display: block;
    transition: transform var(--duration-fast) var(--ease-smooth), opacity var(--duration-fast);
  }

  .store-badge:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .store-badge img {
    height: 42px;
    width: auto;
  }

  /* Visual */
  .hero__visual {
    position: relative;
    height: 600px;
  }

  .hero__phone {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .hero__phone img {
    width: 280px;
    height: auto;
    filter: drop-shadow(0 30px 60px rgba(0, 0, 0, 0.5));
    border-radius: var(--radius-3xl);
  }

  .hero__card {
    position: absolute;
    right: 0;
    top: 55%;
    transform: translateY(-50%) rotate(-12deg);
    z-index: 1;
  }

  .hero__card img {
    width: 320px;
    height: auto;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.4));
    border-radius: var(--radius-xl);
  }

  /* Floating Badges */
  .floating-badge {
    position: absolute;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(45, 45, 45, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-full);
    color: var(--text-primary);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    white-space: nowrap;
    z-index: 3;
  }

  .floating-badge svg {
    color: var(--success);
  }

  .floating-badge--1 {
    top: 15%;
    left: 5%;
  }

  .floating-badge--2 {
    top: 35%;
    right: 0;
  }

  .floating-badge--3 {
    bottom: 25%;
    left: 0;
  }

  /* Scroll Indicator */
  .hero__scroll {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    color: var(--text-muted);
    font-size: var(--text-sm);
  }

  .scroll-arrow {
    width: 24px;
    height: 40px;
    border: 2px solid var(--dark-600);
    border-radius: var(--radius-full);
    position: relative;
  }

  .scroll-dot {
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: var(--gold-400);
    border-radius: var(--radius-full);
    animation: scroll-dot 2s var(--ease-smooth) infinite;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero__container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero__subtitle {
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
    }

    .hero__cta,
    .hero__stores {
      justify-content: center;
    }

    .hero__visual {
      height: 450px;
      margin-top: var(--space-12);
    }

    .hero__phone img {
      width: 240px;
    }

    .hero__card {
      right: 10%;
    }

    .hero__card img {
      width: 260px;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding-top: var(--space-24);
    }

    .hero__title {
      font-size: var(--text-4xl);
    }

    .hero__cta {
      flex-direction: column;
      align-items: center;
    }

    .hero__stores {
      flex-direction: column;
      align-items: center;
    }

    .hero__visual {
      height: 380px;
    }

    .hero__phone img {
      width: 200px;
    }

    .hero__card img {
      width: 220px;
    }

    .floating-badge {
      display: none;
    }

    .hero__scroll {
      display: none;
    }
  }
</style>
